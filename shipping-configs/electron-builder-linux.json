{
  "productName": "TridentFrame",
  "appId": "com.stahlferro.tridentframe",
  "copyright": "Copyright 2021 StahlFerro",
  "buildVersion": "${version}",
  "directories": {
    "output": "release/tridentframe"
  },
  "asar": false,
  "linux": {
    "artifactName": "${productName}-${version}-linux.${ext}",
    "target": [
      "deb",
      "rpm",
      "tar.gz"
    ],
    "icon": "./build/icons",
    "category": "Graphics"
  },
  "files": [
    "**/*",
    "engine/**",
    "dist/**",
    "!dist/config/**",
    "!config/**",
    "config/app.toml",
    "!src/**",
    "src/common/paths.js",
    "src/store/settings.js",
    "!src/assets/**",
    "!src/webfonts/**",
    "!_DEVDOCS/**",
    "!.github/**",
    "!.sass-cache/**",
    "!.vscode/**",
    "!.venv/**",
    "!.mocharc.json",
    "!jsconfig.json",
    "!bin/**",
    "!ccore/**",
    "!engine-prebuild/**",
    "!pycore/**",
    "!temp/**",
    "!shipping-configs/**",
    "!tests/**",
    "!tools/**",
    "!venv/**",
    "!webpack.config.js",
    "!*.py",
    "!*.pylintrc",
    "!*.spec",
    "!*.vue",
    "!*.txt",
    "!*.code-workspace",
    "!*.ps1",
    "!*.sh",
    "!*.md",
    "!*.pytest_cache",
    "LICENSE.md",
    "!Pipfile",
    "!Pipfile.lock"
  ]
}