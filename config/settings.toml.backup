[user]
theme = "dark"
fullscreen = false

[app]
cache_dir = "temp/cache"
previews_dir = "temp/previews"
imagers_dir = "bin"

[app.imagers.win]
gifsicle = "gifsicle-1.92-win64/gifsicle.exe"
imagemagick = "ImageMagick-7.0.8-61-win/convert.exe"
apngopt = "apngopt-1.4-bin-win32/apngopt.exe"
apngdis = "apngdis-2.9-bin-win64/apngdis.exe"
pngquant = "pngquant/pngquant.exe"

[app.imagers.linux]
gifsicle = "gifsicle-1.92-2+b1_amd64/gifsicle"
imagemagick = "ImageMagick-7.0.8-61-unix/convert"
apngopt = "apngopt-1.4-bin-linux/apngopt"
apngdis = "apngdis-2.9-bin-linux/apngdis"
pngquant = "pngquant/pngquant"

[app.image_metadata]
categories = [ "general_info", "animation_info" ]

[app.image_metadata.attributes]
general_info = [
  "name",
  "width",
  "height",
  "format",
  "fsize_hr",
  "absolute_url",
  "creation_datetime",
  "modification_datetime",
  "comments",
  "has_transparency",
  "color_mode",
  "color_profile",
  "bit_depth",
  "exif",
  "is_animated"
]
animation_info = [
  "frame_count",
  "average_delay",
  "delays_are_even",
  "delays",
  "fps",
  "loop_duration",
  "loop_count"
]
